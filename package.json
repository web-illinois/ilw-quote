{
    "name": "@illinois-toolkit/ilw-quote",
    "description": "This component represents a quote or testimontial, with optional attribution of author and source.",
    "repository": "github:web-illinois/ilw-quote",
    "private": false,
    "license": "MIT",
    "version": "1.2.0",
    "type": "module",
    "files": [
        "src/**",
        "dist/**",
        "builder/**"
    ],
    "exports": {
        ".": {
            "import": "./dist/ilw-quote.js",
            "require": "./dist/ilw-quote.cjs",
            "default": "./dist/ilw-quote.js"
        },
        "./ilw-quote.css": {
            "import": "./dist/ilw-quote.css"
        }
    },
    "main": "./dist/ilw-quote.js",
    "module": "./dist/ilw-quote.js",
    "scripts": {
        "dev": "vite",
        "build": "tsc --noEmit && vite build --config vite.transpile.config.ts --emptyOutDir && vite build --config vite.build.config.ts --emptyOutDir",
        "preview": "vite preview",
        "prepack": "npm run build",
        "test:axe": "playwright test",
        "test:axe:github": "playwright test --config=playwright.ci.config.ts",
        "test": "vitest run --browser.headless",
        "test:browser": "vitest watch --browser chromium"
    },
    "dependencies": {
        "lit": "3.1.3"
    },
    "devDependencies": {
        "@illinois-toolkit/ilw-core": "^1.0.5",
        "@playwright/test": "^1.56.1",
        "@types/node": "^22.13.4",
        "@vitest/browser": "^3.2.4",
        "playwright": "^1.56.1",
        "prettier": "^3.5.1",
        "typescript": "^5.9.3",
        "vite": "^7.1.11",
        "vite-plugin-dts": "^4.5.4",
        "vitest-browser-lit": "^0.1.0"
    }
}
